@model Firebase.Models.Vehiculo
@{
    var edit = Model != null && !string.IsNullOrWhiteSpace(Model.Id);
    string formAction = edit ? Url.Action("ActualizarVehiculoAjax", "Vehiculo") : Url.Action("CrearVehiculoAjax", "Vehiculo");
    string submitText = edit ? "Guardar" : "Registrar";
    string clearText = edit ? "Cancelar" : "Limpiar Campos";
}
<form id="vehiculo-form" data-validate="true" data-edit="@edit.ToString().ToLower()" method="post" action="@formAction" onsubmit="return submitVehiculoAjax(this, event);">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" id="Id" value="@(Model?.Id)" />
    <input type="hidden" name="ClienteId" value="@(Model?.ClienteId)" />

    <div class="grid gap-4 m-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <!-- Tipo de Vehículo (PRIMERO) -->
        <div>
            <label for="TipoVehiculo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tipo de Vehículo <span class="text-red-600">*</span></label>
            <div class="flex">
                <select name="TipoVehiculo" id="TipoVehiculo"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 @(edit ? "cursor-not-allowed opacity-60" : "")"
                        required @(edit ? "disabled" : "")>
                    <option value="">Seleccione primero...</option>
                    @foreach (var tipo in (ViewBag.TiposVehiculo as List<string>) ?? new List<string>())
                    {
                        if (Model?.TipoVehiculo != null && string.Equals(Model.TipoVehiculo, tipo, StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@tipo" selected>@tipo</option>
                        }
                        else
                        {
                            <option value="@tipo">@tipo</option>
                        }
                    }
                </select>
                <button type="button" data-modal-target="tipoVehiculoModal" data-modal-toggle="tipoVehiculoModal"
                        class="ml-2 px-1 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors @(edit ? "opacity-50 cursor-not-allowed" : "")"
                        @(edit ? "disabled" : "")>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path></svg>
                </button>
                <button type="button" data-modal-target="eliminarTipoVehiculoModal" data-modal-toggle="eliminarTipoVehiculoModal"
                        class="ml-2 px-1 text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors @(edit ? "opacity-50 cursor-not-allowed" : "")"
                        @(edit ? "disabled" : "")>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"></path></svg>
                </button>
            </div>
            @if (edit)
            {
                <input type="hidden" name="TipoVehiculo" value="@Model.TipoVehiculo" />
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">No editable</p>
            }
            else
            {
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Seleccione para habilitar el formato de patente</p>
            }
            <span asp-validation-for="TipoVehiculo" class="text-red-600 text-xs"></span>
        </div>

        <!-- Patente (SEGUNDO, depende del tipo) -->
        <div>
            <label for="Patente" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Patente <span class="text-red-600">*</span></label>
            <input type="text" name="Patente" id="Patente"
                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 @(edit ? "cursor-not-allowed opacity-60" : "")"
                   placeholder="Seleccione tipo de vehículo primero"
                   value="@(Model?.Patente)"
                   required @(edit ? "readonly" : "")>

            @if (edit)
            {
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">No editable</p>
            }
            <span asp-validation-for="Patente" class="text-red-600 text-xs"></span>
            <p id="patente-formato-hint" class="mt-1 text-xs text-gray-500 dark:text-gray-400">Seleccione un tipo de vehículo</p>
            <span id="patente-validation-error" class="text-red-600 text-xs hidden"></span>
        </div>

        <!-- Marca -->
        <div>
            <label for="Marca" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Marca <span class="text-red-600">*</span></label>
            @if (edit)
            {
                <input type="text" name="Marca" id="Marca"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white cursor-not-allowed opacity-60"
                       value="@(Model?.Marca)"
                       readonly required>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">No editable</p>
            }
            else
            {
                <select name="Marca" id="Marca" required
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white">
                    <option value="">Seleccione una marca...</option>
                </select>
                <span class="text-xs text-gray-500 dark:text-gray-400" id="marca-loading">Cargando marcas...</span>
            }
            <span asp-validation-for="Marca" class="text-red-600 text-xs"></span>
        </div>

        <!-- Modelo -->
        <div>
            <label for="Modelo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Modelo <span class="text-red-600">*</span></label>
            @if (edit)
            {
                <input type="text" name="Modelo" id="Modelo"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       value="@(Model?.Modelo)"
                       required>
            }
            else
            {
                <select name="Modelo" id="Modelo" required disabled
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white">
                    <option value="">Primero seleccione una marca</option>
                </select>
            }
            <span asp-validation-for="Modelo" class="text-red-600 text-xs"></span>
        </div>

        <!-- Color -->
        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Color <span class="text-red-600">*</span></label>
            
            @if (!edit)
            {
                <!-- Toggle para color personalizado -->
                <div class="flex items-center mb-2">
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="color-custom-toggle" class="sr-only peer">
                        <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
                        <span class="ms-3 text-sm text-gray-900 dark:text-gray-300">Color personalizado</span>
                    </label>
                </div>

                <!-- Select de colores oficiales -->
                <select id="Color" name="Color" required
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white">
                    <option value="">Seleccione un color...</option>
                </select>

                <!-- Input de color personalizado (oculto por defecto) -->
                <input type="text" id="ColorCustom" name="ColorCustom"
                       class="hidden bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Ej: Verde lima metalizado">
            }
            else
            {
                <input type="text" name="Color" id="Color"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                       placeholder="Color"
                       value="@(Model?.Color)"
                       required>
            }
            <span asp-validation-for="Color" class="text-red-600 text-xs"></span>
        </div>

        <!-- Titular (Solo lectura) -->
        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Titular</label>
            <input type="text" 
                   class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white cursor-not-allowed"
                   value="@(string.IsNullOrEmpty(Model?.ClienteNombreCompleto) ? "Sin asignar" : Model.ClienteNombreCompleto)"
                   readonly>
            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Solo lectura</p>
        </div>
    </div>

    <div class="flex justify-end m-4 gap-2">
        <button type="submit" id="submit-button" class="text-white inline-flex items-center bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-500 dark:hover:bg-green-600 dark:focus:ring-green-900 font-medium rounded-lg text-sm px-2 py-1 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-8 text-white-500 dark:text-white-400">
                <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
            </svg>
            @submitText
        </button>
        <button type="button" id="clear-button" class="text-white inline-flex items-center bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900 font-medium rounded-lg text-sm px-2 py-1 text-center" onclick="@(edit ? "loadVehiculoForm(null)" : "document.getElementById('vehiculo-form').reset()")">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-8 text-white-500 dark:text-white-400">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-1.72 6.97a.75.75 0 1 0-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 1 0 1.06 1.06L12 13.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L13.06 12l1.72-1.72a.75.75 0 1 0-1.06-1.06L12 10.94l-1.72-1.72Z" clip-rule="evenodd" />
            </svg>
            @clearText
        </button>
    </div>
    <div id="vehiculo-validation-summary" asp-validation-summary="All" class="hidden p-4 mt-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"></div>
    <div id="ajax-form-messages" class="mb-4"></div>
</form>

@if (!edit)
{
    <script src="~/js/vehiculo-api.js" asp-append-version="true"></script>
}
