@model List<Firebase.Models.Empleado>
@{
    ViewData["Title"] = "Personal";
    var user = User as ClaimsPrincipal;
  var currentUserEmail = user?.FindFirst(ClaimTypes.Email)?.Value;
    
    // Preparar mensajes para JavaScript
    var successMessage = TempData["Success"]?.ToString();
    var errorMessage = TempData["Error"]?.ToString();
    
 if (TempData["RoleChangeEvent_UserId"] != null && TempData["RoleChangeEvent_NewRole"] != null)
    {
        var userId = TempData["RoleChangeEvent_UserId"].ToString();
        var newRole = TempData["RoleChangeEvent_NewRole"].ToString();
        <script>
       gtag('event', 'role_change', {
        'user_id': '@userId',
 'new_role': '@newRole'
  });
        </script>
  }
    if (TempData["StateChangeEvent_UserId"] != null && TempData["StateChangeEvent_NewState"] != null)
    {
        var userId = TempData["StateChangeEvent_UserId"].ToString();
        var newState = TempData["StateChangeEvent_NewState"];
  <script>
        gtag('event', 'state_change', {
       'user_id': '@userId',
    'new_state': '@newState'
      });
        </script>
    }
}

@* Meta tags para mensajes *@
@if (!string.IsNullOrEmpty(successMessage))
{
    <meta name="success-message" content="@successMessage" />
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <meta name="error-message" content="@errorMessage" />
}
<section class="bg-gray-50 dark:bg-gray-900">
    <div class="mx-auto bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
        <!-- Encabezado -->
        <div class="p-2 flex justify-between items-center rounded-t border-b dark:border-gray-600">
 <h1 class="text-2xl md:block font-semibold text-gray-900 dark:text-white">
                Personal
            </h1>
   <!-- Botón de ayuda -->
         <button data-popover-target="popover-click" data-popover-trigger="click" type="button" class="text-white ml-auto inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-2 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
   <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
             <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z"></path>
    </svg>
            </button>
      <div data-popover id="popover-click" role="tooltip" class="absolute z-10 invisible inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-xs opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
     <div class="px-3 py-2 bg-gray-100 border-b border-gray-200 rounded-t-lg dark:border-gray-600 dark:bg-gray-700">
  <h3 class="font-semibold text-gray-900 dark:text-white">Ayuda</h3>
     </div>
          <div class="px-3 py-2">
        <p>En esta página puedes ver a todo el personal registrado en el sistema, asignarle roles y darles de baja</p>
</div>
    <div data-popper-arrow></div>
            </div>
   </div>
        
        <!-- Encabezado de la tabla -->
        <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
            <div class="w-full md:w-1/2">
     <form class="flex items-center" onsubmit="return false;">
       <label for="simple-search" class="sr-only">Buscar</label>
        <div class="relative w-96">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
   <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
       </svg>
       </div>
      <input type="text" id="simple-search" value="@(ViewBag.SearchTerm ?? "")" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Buscar por nombre, email o rol...">
        </div>
    </form>
         </div>
  <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
        <div class="flex items-center space-x-3 w-full md:w-auto">
            <!-- Botón de Filtro -->
            <button id="filterDropdownButton" data-dropdown-toggle="filterDropdown" class="w-full md:w-auto flex items-center justify-center py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" type="button">
      <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="h-4 w-4 mr-2 text-gray-400" viewbox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
         </svg>
  Filtros
    <svg class="-mr-1 ml-1.5 w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path clip-rule="evenodd" fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
            </svg>
        </button>
         <!-- Dropdown de Filtro con layout horizontal -->
           <div id="filterDropdown" class="z-50 hidden bg-white rounded-lg shadow-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600">
           <form method="get" asp-action="Index" id="filterForm" class="p-4">
          <input type="hidden" name="pageNumber" value="1" />

         <!-- Layout horizontal con grid -->
           <div class="grid grid-cols-1 md:grid-cols-2 gap-6 min-w-[400px]">

     <!-- Columna 1: Estado -->
         <div>
        <h6 class="mb-3 text-sm font-medium text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-600 pb-2">
          Estado
         </h6>
   <div class="space-y-2 text-sm">
           <label class="flex items-center">
    <input id="activoCheckbox" type="checkbox" name="estados" value="Activo"
    @(ViewBag.Estados?.Contains("Activo") == true ? "checked" : "")
           class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
             <span class="ml-2 text-gray-900 dark:text-gray-100">Activo</span>
    </label>
            <label class="flex items-center">
       <input id="inactivoCheckbox" type="checkbox" name="estados" value="Inactivo"
      @(ViewBag.Estados?.Contains("Inactivo") == true ? "checked" : "")
          class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                 <span class="ml-2 text-gray-900 dark:text-gray-100">Inactivo</span>
            </label>
      </div>
       </div>

    <!-- Columna 2: Rol -->
   <div>
       <h6 class="mb-3 text-sm font-medium text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-600 pb-2">
         Rol
             </h6>
        <div class="space-y-2 max-h-40 overflow-y-auto text-sm">
       @if (ViewBag.TodosLosRoles != null)
 {
             @foreach (var rol in ViewBag.TodosLosRoles)
     {
         <label class="flex items-center">
  <input id="rol-@rol.Replace(" ", "-")" type="checkbox" name="roles" value="@rol"
        @(ViewBag.Roles?.Contains(rol) == true ? "checked" : "")
  class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
        <span class="ml-2 text-gray-900 dark:text-gray-100">@rol</span>
     </label>
              }
         }
            </div>
  </div>
  </div>

     <!-- Botones de acción -->
    <div class="flex justify-between items-center mt-6 pt-4 border-t border-gray-200 dark:border-gray-600">
          <button type="button" onclick="clearPersonalFilters()"
      class="px-4 py-2 text-sm text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200">
      Limpiar filtros
      </button>
     <button type="submit"
            class="px-6 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">
      Aplicar Filtros
            </button>
        </div>
  </form>
   </div>
  </div>
  </div>
        </div>
        
        <!-- Las notificaciones aparecerán aquí dinámicamente -->
        
        <!-- Tabla de la vista -->
     <div id="personal-table-container" data-current-page="@ViewBag.CurrentPage">
       @await Html.PartialAsync("_PersonalTable", Model)
        </div>

   <!-- Modal reutilizable de confirmación para empleados -->
 <!-- Backdrop del modal -->
     <div id="personalConfirmModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-md max-h-full">
       <!-- Modal content -->
           <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
     <!-- Botón de cierre -->
  <button type="button"
   class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          onclick="closePersonalConfirmModal()">
         <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
       <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
   </svg>
     <span class="sr-only">Cerrar modal</span>
           </button>
   <!-- Modal body -->
   <div class="p-4 md:p-5 text-center">

         <!-- Ícono dinámico -->
    <div id="personalConfirmIconWrapper" class="w-12 h-12 rounded-full bg-yellow-100 dark:bg-yellow-900 p-2 flex items-center justify-center mx-auto mb-3.5">
               <!-- El ícono se reemplaza dinámicamente según la acción -->
         <svg id="personalConfirmIcon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-8 h-8 text-yellow-500 dark:text-yellow-400" viewBox="0 0 24 24">
       <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75
      4.365-9.75 9.75s4.365 9.75 9.75
 9.75 9.75-4.365 9.75-9.75S17.385
        2.25 12 2.25Zm-.75 4.5a.75.75 0
   0 1 1.5 0v6a.75.75 0 0
   1-1.5 0v-6Zm0 9a.75.75 0 0
      1 1.5 0v1.5a.75.75 0 0
             1-1.5 0V15.75Z" clip-rule="evenodd" />
   </svg>
        </div>

                <!-- Título y mensaje dinámico -->
         <h3 id="personalConfirmTitle" class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            Confirmar acción
                </h3>
      <p id="personalConfirmMessage" class="text-sm text-gray-600 dark:text-gray-300 mb-4">
  ¿Está seguro?
           </p>

  <!-- Formulario dinámico -->
     <form id="personalConfirmForm" method="post" onsubmit="return submitPersonalEstado(this);">
       @Html.AntiForgeryToken()
               <input type="hidden" name="id" id="personalConfirmId" />

        <div class="flex justify-center items-center space-x-4">
             <!-- Cancelar -->
    <button type="button"
    onclick="closePersonalConfirmModal()"
              class="py-2 px-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-200
                   hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-300
     hover:text-gray-900 focus:z-10
           dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500
      dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">
   Cancelar
     </button>
         <!-- Confirmar -->
  <button id="personalConfirmSubmit"
  type="submit"
         class="py-2 px-3 text-sm font-medium text-center text-white bg-green-600 rounded-lg
       hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300
       dark:bg-green-500 dark:hover:bg-green-600 dark:focus:ring-green-900">
           Confirmar
         </button>
        </div>
      </form>
    </div>
        </div>
    </div>
</section>
<script src="~/js/personal.js" asp-append-version="true"></script>