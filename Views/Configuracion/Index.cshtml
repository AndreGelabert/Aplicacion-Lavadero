@model Firebase.Models.Configuracion
@{
    ViewData["Title"] = "Configuración del Sistema";
}

<!-- Agregar estilos personalizados para el modal y los botones -->
<style>
  /* Estilos para los botones de día del modal */
    .dia-modal-btn {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
      justify-content: center;
      padding: 0;
        transition: all 0.2s ease;
        font-weight: 500;
    }
    
  .dia-modal-btn.seleccionado {
        background-color: rgb(37, 99, 235);
        border-color: rgb(37, 99, 235);
    color: white;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }
    
    .dia-modal-btn:hover:not(.seleccionado) {
        background-color: rgb(239, 246, 255);
   border-color: rgb(191, 219, 254);
    }
    
    /* Animación del modal */
    #modalHorarios:not(.hidden) {
        animation: fadeIn 0.2s ease-out;
 }
    
    @@keyframes fadeIn {
  from {
          opacity: 0;
        transform: scale(0.95);
    }
        to {
   opacity: 1;
       transform: scale(1);
        }
    }
    
 /* Hover effect para las filas de resumen */
    .horario-info:hover {
     background-color: rgba(0, 0, 0, 0.02);
    }
    
    /* Estilos para inputs de tiempo */
 input[type="time"]::-webkit-calendar-picker-indicator {
   cursor: pointer;
   filter: brightness(0.9);
    }
  
    /* Dark mode adjustments */
    .dark .dia-modal-btn.seleccionado {
        background-color: rgb(29, 78, 216);
 border-color: rgb(29, 78, 216);
    }
    
  .dark .dia-modal-btn:hover:not(.seleccionado) {
        background-color: rgb(55, 65, 81);
     border-color: rgb(75, 85, 99);
    }
</style>

<section class="bg-gray-50 dark:bg-gray-900">
    <div class="mx-auto bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-visible">
        <!-- Encabezado -->
        <div class="p-2 flex justify-between items-center rounded-t border-b dark:border-gray-600">
            <h1 class="text-2xl md:block font-semibold text-gray-900 dark:text-white">
                Configuración del Sistema
            </h1>
            <!-- Botón de ayuda -->
            <button data-popover-target="popover-help" data-popover-trigger="click" type="button" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-2 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z"></path>
                </svg>
            </button>
            <div data-popover id="popover-help" role="tooltip" class="absolute z-10 invisible inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-xs opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
                <div class="px-3 py-2 bg-gray-100 border-b border-gray-200 rounded-t-lg dark:border-gray-600 dark:bg-gray-700">
                    <h3 class="font-semibold text-gray-900 dark:text-white">Ayuda</h3>
                </div>
                <div class="px-3 py-2">
                    <p>En esta página puedes configurar diversos parámetros del sistema como descuentos, horarios de operación, capacidad del lavadero, y más.</p>
                </div>
                <div data-popper-arrow></div>
            </div>
        </div>

        <!-- Mensajes de éxito/error -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="p-4 m-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                <svg class="inline w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="p-4 m-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                <svg class="inline w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Formulario de Configuración -->
        <form asp-action="Actualizar" method="post" class="p-4 grid grid-cols-2 gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaActualizacion" />
            <input type="hidden" asp-for="ActualizadoPor" />

            <!-- Sección 1: Descuentos por Cancelación Anticipada -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                    Descuentos por Cancelación Anticipada
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Configure el beneficio que recibirán los usuarios al cancelar sus citas con anticipación.
                </p>
                
                <div class="grid gap-4 grid-cols-1 md:grid-cols-3">
                    <div>
                        <label asp-for="CancelacionAnticipadaDescuento" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Descuento (%) <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="CancelacionAnticipadaDescuento" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="0" max="100" step="1" required />
                        <span asp-validation-for="CancelacionAnticipadaDescuento" class="text-red-600 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="CancelacionAnticipadaHorasMinimas" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Horas Mínimas de Anticipación <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="CancelacionAnticipadaHorasMinimas" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="1" max="168" step="1" required />
                        <span asp-validation-for="CancelacionAnticipadaHorasMinimas" class="text-red-600 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="CancelacionAnticipadaValidezDias" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Validez del Descuento (días) <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="CancelacionAnticipadaValidezDias" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="1" max="365" step="1" required />
                        <span asp-validation-for="CancelacionAnticipadaValidezDias" class="text-red-600 text-xs"></span>
                    </div>
                </div>
            </div>

            <!-- Sección 2: Información del Lavadero -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                    Información del Lavadero
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Configure el nombre y ubicación del lavadero que se mostrará en WhatsApp y otras secciones.
                </p>
                
                <div class="grid gap-4 grid-cols-1 md:grid-cols-2">
                    <div>
                        <label asp-for="NombreLavadero" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Nombre del Lavadero <span class="text-red-600">*</span>
                        </label>
                        <input type="text" asp-for="NombreLavadero" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               placeholder="Ej: Lavadero AutoClean" required />
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Este nombre aparecerá en los mensajes de WhatsApp y pantallas de información
                        </p>
                        <span asp-validation-for="NombreLavadero" class="text-red-600 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Ubicacion" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Ubicación / Dirección
                        </label>
                        <input type="text" asp-for="Ubicacion" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               placeholder="Ej: Av. Principal 123, Ciudad" />
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Dirección física del lavadero (se mostrará en "Sobre nosotros")
                        </p>
                        <span asp-validation-for="Ubicacion" class="text-red-600 text-xs"></span>
                    </div>
                </div>
            </div>

            <!-- Sección 3: Configuración de Paquetes de Servicios -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                    Paquetes de Servicios
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Configure el incremento/paso para el campo de descuento en paquetes de servicios.
                </p>
                
                <div class="grid gap-4 grid-cols-1 md:grid-cols-2">
                    <div>
                        <label asp-for="PaquetesDescuentoStep" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Paso de Descuento (%) <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="PaquetesDescuentoStep" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="5" max="50" step="1" required />
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Define los incrementos permitidos para los descuentos (ej: 5% permite 5%, 10%, 15%, etc.)
                        </p>
                        <span asp-validation-for="PaquetesDescuentoStep" class="text-red-600 text-xs"></span>
                    </div>
                </div>
            </div>

            <!-- Sección 4: Horarios de Operación -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg col-span-2">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                    Horarios de Operación
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Seleccione los días de funcionamiento y configure los horarios de apertura y cierre.
                </p>

                <!-- Checkboxes de días de la semana -->
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Días de funcionamiento</label>
                <ul class="items-center select-none w-full text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white mb-4">
                @{
                    var diasSemana = new[] { 
                        new { Id = "lunes", Nombre = "Lunes" },
                        new { Id = "martes", Nombre = "Martes" },
                        new { Id = "miercoles", Nombre = "Miércoles" },
                        new { Id = "jueves", Nombre = "Jueves" },
                        new { Id = "viernes", Nombre = "Viernes" },
                        new { Id = "sabado", Nombre = "Sábado" },
                        new { Id = "domingo", Nombre = "Domingo" }
                    };
                    var esPrimero = true;
                }
                @foreach (var dia in diasSemana)
                {
                    var clasesBorde = esPrimero ? "" : "border-t sm:border-t-0 sm:border-l";
                    esPrimero = false;
                    var estaAbierto = Model.HorariosOperacion.ContainsKey(dia.Nombre) && 
                                      Model.HorariosOperacion[dia.Nombre].ToUpper() != "CERRADO";
                
                    <li class="w-full @clasesBorde border-gray-300 dark:border-gray-600">
                        <div class="flex items-center ps-3">
                            <input id="@dia.Id-checkbox" 
                                   type="checkbox" 
                                   value="@dia.Nombre"
                                   data-dia="@dia.Nombre"
                                   @(estaAbierto ? "checked" : "")
                                   class="dia-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="@dia.Id-checkbox" class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300 cursor-pointer">
                                @dia.Nombre
                            </label>
                        </div>
                    </li>
                }
                </ul>

                <!-- Botones de edición masiva -->
                <div class="flex flex-wrap gap-2 mb-4">
                    <button type="button" 
                            onclick="abrirModalHorarios('todos')"
                            class="text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Editar todos los horarios
                    </button>
                    <button type="button" 
                            onclick="abrirModalHorarios('rango')"
                            class="text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Editar rango de días
                    </button>
                </div>

                <!-- Lista de resumen de horarios -->
                <div id="resumen-horarios" class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
         <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-600">Resumen de horarios</h3>
            <div class="space-y-1">
    @foreach (var dia in new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" })
           {
       var horario = Model.HorariosOperacion.ContainsKey(dia) ? Model.HorariosOperacion[dia] : "CERRADO";
         var esCerrado = horario.ToUpper() == "CERRADO";
   
    <div class="flex items-center py-2.5 px-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors duration-150">
         <span class="text-sm font-medium text-gray-900 dark:text-white w-28">@dia</span>
   <span class="text-sm flex-1 mx-4 @(esCerrado ? "text-red-600 dark:text-red-400 font-medium" : "text-gray-600 dark:text-gray-400")">
    @horario
          </span>
           <button type="button" 
              onclick="abrirModalHorarios('individual', '@dia')"
       class="ml-auto text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 p-1 rounded hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors duration-150"
           title="Editar horario de @dia">
<svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
<path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
  </button>
       </div>
          }
            </div>
                </div>

                <!-- Hidden inputs para enviar al servidor -->
                <div id="horarios-hidden-container">
                    @foreach (var dia in new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" })
                    {
                        var horario = Model.HorariosOperacion.ContainsKey(dia) ? Model.HorariosOperacion[dia] : "CERRADO";
                        <input type="hidden" 
                               name="HorariosOperacion[@dia]" 
                               id="horario-@dia" 
                               value="@horario" />
                    }
                </div>
            </div>

            <!-- Sección 5: Capacidad del Lavadero -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                    Capacidad del Lavadero
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Configure la cantidad máxima de lavados/citas que se pueden aceptar simultáneamente.
                </p>
                
                <div class="grid gap-4 grid-cols-1 md:grid-cols-2">
                    <div>
                        <label asp-for="CapacidadMaximaConcurrente" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Capacidad Máxima Concurrente <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="CapacidadMaximaConcurrente" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="1" max="100" step="1" required />
                        <span asp-validation-for="CapacidadMaximaConcurrente" class="text-red-600 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="ConsiderarEmpleadosActivos" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Considerar Empleados Activos
                        </label>
                        <div class="flex items-center">
                            <input type="checkbox" asp-for="ConsiderarEmpleadosActivos" 
                                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="ConsiderarEmpleadosActivos" class="ml-2 text-sm text-gray-900 dark:text-gray-300">
                                Limitar capacidad según empleados activos
                            </label>
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Si está activado, la capacidad efectiva será el mínimo entre la capacidad configurada y el número de empleados activos.
                        </p>
                    </div>
                    
                    <div>
                        <label asp-for="EmpleadosMaximosPorLavado" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Empleados Máximos por Lavado <span class="text-red-600">*</span>
                        </label>
                        <input type="number" asp-for="EmpleadosMaximosPorLavado" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               min="1" max="20" step="1" required />
                        <span asp-validation-for="EmpleadosMaximosPorLavado" class="text-red-600 text-xs"></span>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Cantidad máxima de empleados que se pueden asignar a un lavado individual.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Sección 6: Configuración de Sesiones -->
            <div class="mb-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
         <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
          Configuración de Sesiones
    </h2>
  <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
       Configure la duración máxima de las sesiones y el tiempo de inactividad. La sesión se cierra automáticamente al cerrar el navegador.
            </p>  
       <div class="grid gap-4 grid-cols-1 md:grid-cols-2">
     <div>
<label asp-for="SesionDuracionHoras" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
           Duración Máxima de Sesión (horas) <span class="text-red-600">*</span>
               </label>
      <input type="number" asp-for="SesionDuracionHoras" 
  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
    min="1" max="24" step="1" required />
     <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
               Tiempo máximo que puede durar una sesión activa (1-24 horas). La sesión se cierra al alcanzar este límite.
          </p>
       <span asp-validation-for="SesionDuracionHoras" class="text-red-600 text-xs"></span>
          </div>  
          <div>
  <label asp-for="SesionInactividadMinutos" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                   Tiempo de Inactividad (minutos) <span class="text-red-600">*</span>
     </label>
      <input type="number" asp-for="SesionInactividadMinutos" 
